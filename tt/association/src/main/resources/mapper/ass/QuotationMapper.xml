<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tt.association.module.ass.dao.QuotationDao">

    <!-- 以下代码片段中,quotation表的别名为RA -->

    <!-- quotation表的字段 -->
    <sql id ="quotation_columns">
        RA.id,RA.quoNum,RA.companyId,RA.linkName,RA.phone,RA.fax,RA.email,RA.address,RA.quoName,RA.quoTime,RA.totalPrice,RA.cent,RA.transport,RA.remark,RA.quoPhone,RA.quoFax,RA.createTime,RA.updateTime
    </sql>

    
    <!-- quotation表的resultMap映射 -->
    <resultMap id="entityResultMap" type="com.tt.association.module.ass.entity.QuotationEntity">
        <id  property="id"  column="id"/>
        <result  property="quoNum"  column="quoNum"/>
        <result  property="companyId"  column="companyId"/>
        <result  property="linkName"  column="linkName"/>
        <result  property="phone"  column="phone"/>
        <result  property="fax"  column="fax"/>
        <result  property="email"  column="email"/>
        <result  property="address"  column="address"/>
        <result  property="quoName"  column="quoName"/>
        <result  property="quoTime"  column="quoTime"/>
        <result  property="totalPrice"  column="totalPrice"/>
        <result  property="cent"  column="cent"/>
        <result  property="transport"  column="transport"/>
        <result  property="remark"  column="remark"/>
        <result  property="quoPhone"  column="quoPhone"/>
        <result  property="quoFax"  column="quoFax"/>
        <result  property="createTime"  column="createTime"/>
        <result  property="updateTime"  column="updateTime"/>
    </resultMap>


    <!-- 添加一条记录 -->
    <insert id="insertEntity" parameterType="com.tt.association.module.ass.entity.QuotationEntity" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO quotation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            quoNum,
            companyId,
            linkName,
            phone,
            fax,
            email,
            address,
            quoName,
            quoTime,
            totalPrice,
            cent,
            transport,
            remark,
            quoPhone,
            quoFax,
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{id},
            #{quoNum},
            #{companyId},
            #{linkName},
            #{phone},
            #{fax},
            #{email},
            #{address},
            #{quoName},
            #{quoTime},
            #{totalPrice},
            #{cent},
            #{transport},
            #{remark},
            #{quoPhone},
            #{quoFax},
        </trim>
    </insert>


    <!-- 批量添加 -->
    <insert id="insertEntityByBatch" parameterType="list" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO quotation
        <trim prefix="(" suffix=") VALUES" suffixOverrides=",">
            id,
            quoNum,
            companyId,
            linkName,
            phone,
            fax,
            email,
            address,
            quoName,
            quoTime,
            totalPrice,
            cent,
            transport,
            remark,
            quoPhone,
            quoFax,
        </trim>
        <foreach collection="list" index="index" item="item" separator=",">
        (
            #{item.id},
            #{item.quoNum},
            #{item.companyId},
            #{item.linkName},
            #{item.phone},
            #{item.fax},
            #{item.email},
            #{item.address},
            #{item.quoName},
            #{item.quoTime},
            #{item.totalPrice},
            #{item.cent},
            #{item.transport},
            #{item.remark},
            #{item.quoPhone},
            #{item.quoFax}
        )
        </foreach>
    </insert>


    <!-- 更新一条记录 -->
    <update id="updateEntity" parameterType="com.tt.association.module.ass.entity.QuotationEntity">
        UPDATE quotation
        <trim prefix="set" suffixOverrides=",">
            <if test="quoNum != null">
                quoNum = #{quoNum},
            </if>
            <if test="companyId != null">
                companyId = #{companyId},
            </if>
            <if test="linkName != null">
                linkName = #{linkName},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="fax != null">
                fax = #{fax},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="quoName != null">
                quoName = #{quoName},
            </if>
            <if test="quoTime != null">
                quoTime = #{quoTime},
            </if>
            <if test="totalPrice != null">
                totalPrice = #{totalPrice},
            </if>
            <if test="cent != null">
                cent = #{cent},
            </if>
            <if test="transport != null">
                transport = #{transport},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="quoPhone != null">
                quoPhone = #{quoPhone},
            </if>
            <if test="quoFax != null">
                quoFax = #{quoFax},
            </if>
        </trim>
        WHERE id = #{id}
    </update>


    <!-- 根据主键删除一条记录 -->
    <delete id="deleteEntity">
        DELETE FROM quotation WHERE id = #{0}
    </delete>


    <!-- 根据列条件查询实体类信息 -->
    <sql id="whereColumns">
        <trim suffixOverrides=",">
            <if test="id != null">
                RA.id = #{id},
            </if>
            <if test="quoNum != null">
                RA.quoNum = #{quoNum},
            </if>
            <if test="companyId != null">
                RA.companyId = #{companyId},
            </if>
            <if test="linkName != null">
                RA.linkName = #{linkName},
            </if>
            <if test="phone != null">
                RA.phone = #{phone},
            </if>
            <if test="fax != null">
                RA.fax = #{fax},
            </if>
            <if test="email != null">
                RA.email = #{email},
            </if>
            <if test="address != null">
                RA.address = #{address},
            </if>
            <if test="quoName != null">
                RA.quoName = #{quoName},
            </if>
            <if test="quoTime != null">
                RA.quoTime = #{quoTime},
            </if>
            <if test="totalPrice != null">
                RA.totalPrice = #{totalPrice},
            </if>
            <if test="cent != null">
                RA.cent = #{cent},
            </if>
            <if test="transport != null">
                RA.transport = #{transport},
            </if>
            <if test="remark != null">
                RA.remark = #{remark},
            </if>
            <if test="quoPhone != null">
                RA.quoPhone = #{quoPhone},
            </if>
            <if test="quoFax != null">
                RA.quoFax = #{quoFax},
            </if>
            <if test="createTime != null">
                RA.createTime = #{createTime},
            </if>
            <if test="updateTime != null">
                RA.updateTime = #{updateTime},
            </if>
        </trim>
    </sql>


    <!-- 根据主键查找对应实体类 -->
    <select id="findEntityByMainId" resultType="com.tt.association.module.ass.entity.QuotationEntity">
        SELECT
            <include refid="quotation_columns"></include>
        FROM quotation RA
        WHERE id = #{0}
    </select>


    <!-- 根据条件查出来是单条实体类 -->
    <select id="findEntityByOne" parameterType="com.tt.association.module.ass.entity.QuotationEntity" resultType="com.tt.association.module.ass.entity.QuotationEntity">
        SELECT
            <include refid="quotation_columns"></include>
        FROM
            quotation RA
        <where>
            <include refid="whereColumns"></include>
        </where>
    </select>


    <!-- 根据列条件查找实体类集合 -->
    <select id="findEntityList" parameterType="com.tt.association.module.ass.entity.QuotationEntity" resultType="com.tt.association.module.ass.entity.QuotationEntity">
        SELECT
            <include refid="quotation_columns"></include>
        FROM
            quotation RA
        <where>
            <include refid="whereColumns"></include>
        </where>
    </select>


    <!-- 查询记录数 -->
    <select id="findEntityCount" parameterType="com.tt.association.module.ass.entity.QuotationEntity" resultType="long">
        SELECT
            count(1)
        FROM
            quotation RA
        <where>
            <include refid="whereColumns"></include>
        </where>
    </select>


    <!-- 单表分页查询 -->
    <select id="findPageEntityList" parameterType="map" resultType="com.tt.association.module.ass.entity.QuotationEntity">
        SELECT
            <include refid="quotation_columns"></include>
        FROM
            quotation RA
        <if test="start!=null and pageSize !=null">
            LIMIT #{start},#{pageSize}
        </if>
    </select>


</mapper>